<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
 	<modelVersion>4.0.0</modelVersion>
  	<groupId>kr.co.jhta</groupId>
  	<artifactId>spring-di</artifactId>
  	<version>0.0.1-SNAPSHOT</version>

	<!-- 
		<properties> 테그에는 pom.xml에서 사용할 프로퍼티값을 정의한다.
	-->
 	<properties>
		<!-- 프로젝트의 자바버전을 11으로 지정함 -->
     	<maven.compiler.target>11</maven.compiler.target>
    	<maven.compiler.source>11</maven.compiler.source>
	</properties>


	<!-- 
		<dependencies> 태그에는 이 프로젝트의 의존성을 정의한다.
	-->
	<dependencies>
		<!-- 
			<dependency> 태그는 의존성을 정의한다.
			<dependency> 태그에 정의된 의존성은 프로젝트가 빌드될 때 메이븐 저장소에서 자동으로 
						 다운로드하고, 프로젝트의 클래스패스에 추가된다.
			다운로드한 라이브러리에 의존성이 정의되어있으면, 그 의존성도 자동으로 다운로드하고, 
			프로젝트의 클래스패스에 추가된다.
		-->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>5.3.28</version>
		</dependency>
		
		<!-- SLF4J API -->
       <dependency>
           <groupId>org.slf4j</groupId>
           <artifactId>slf4j-api</artifactId>
           <version>1.7.30</version>
       </dependency>
       <!-- Logback Core/Classic -->
       <dependency>
           <groupId>ch.qos.logback</groupId>
           <artifactId>logback-core</artifactId>
           <version>1.2.3</version>
       </dependency>
       <dependency>
           <groupId>ch.qos.logback</groupId>
           <artifactId>logback-classic</artifactId>
           <version>1.2.3</version>
       </dependency>
	</dependencies>

</project>